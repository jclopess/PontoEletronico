# Estágio 1: Build da Aplicação React
FROM node:18-alpine AS builder

# Define o diretório de trabalho
WORKDIR /app

# Copia os arquivos de configuração de dependências e instala
COPY package*.json ./
RUN npm install

# Copia todo o resto do código (client, shared, etc.)
COPY . .

# Executa o script de build do Vite, que gera os arquivos estáticos
RUN npm run build

# Estágio 2: Servidor de Produção Nginx
FROM nginx:1.27-alpine

# Remove a configuração padrão do Nginx
RUN rm /etc/nginx/conf.d/default.conf

# Copia a nossa configuração customizada do Nginx para o lugar
COPY nginx/default.conf /etc/nginx/conf.d/default.conf

# Copia os arquivos estáticos construídos no estágio anterior para a pasta do Nginx
COPY --from=builder /app/dist/public /usr/share/nginx/html

# Expõe a porta 80 do container
EXPOSE 80

# Comando para iniciar o Nginx
CMD ["nginx", "-g", "daemon off;"]